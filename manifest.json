{
  "manifest_version": 3,
  "name": "تبدیل صدا به متن - Voice to Text",
  "version": "3.0.1",
  "description": "افزونه حرفه‌ای تبدیل صدا به متن - ضبط مداوم بدون محدودیت، دستورات صوتی، UI زیبا و عملکرد بهینه",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "تبدیل صدا به متن"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
