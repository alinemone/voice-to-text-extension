{
  "manifest_version": 3,
  "name": "تبدیل صدا به متن - Voice to Text",
  "version": "2.0.0",
  "description": "تبدیل آسان صدا به متن با Chrome Speech API - پشتیبانی از چندین زبان و کاملا قابل سفارشی‌سازی",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "تبدیل صدا به متن"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
